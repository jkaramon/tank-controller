<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/MoveBackwards"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginBottom="218dp"
        android:text="Dozadu"
        app:layout_constraintBottom_toTopOf="@+id/MoveText"
        app:layout_constraintStart_toStartOf="@+id/MoveStop"
        app:layout_constraintTop_toBottomOf="@+id/MoveStop" />

    <Button
        android:id="@+id/MoveRight"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Doprava"
        app:layout_constraintBaseline_toBaselineOf="@+id/MoveStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MoveStop" />

    <TextView
        android:id="@+id/MoveText"
        android:layout_width="114dp"
        android:layout_height="45dp"
        android:layout_marginBottom="158dp"
        android:text="Kam pojedeš?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MoveForward"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:layout_marginBottom="52dp"
        android:text="Dopředu"
        app:layout_constraintBottom_toTopOf="@+id/MoveStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MoveLeft"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="Doleva"
        app:layout_constraintBaseline_toBaselineOf="@+id/MoveStop"
        app:layout_constraintEnd_toStartOf="@+id/MoveStop"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MoveStop"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="55dp"
        android:text="Zastavit"
        app:layout_constraintBottom_toTopOf="@+id/MoveBackwards"
        app:layout_constraintEnd_toStartOf="@+id/MoveRight"
        app:layout_constraintStart_toEndOf="@+id/MoveLeft"
        app:layout_constraintTop_toBottomOf="@+id/MoveForward" />

</androidx.constraintlayout.widget.ConstraintLayout>